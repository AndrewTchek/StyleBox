<Window x:Class="StyleBox.AutorizationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизація" Height="450" Width="800">
    <Grid >
        <StackPanel Width="500" Height="350" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Вхід" FontSize="30" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>

            <TextBlock Text="Ім'я користувача:" FontSize="16"/>
            <TextBox Name="UsernameTextBox" Margin="0,5" Height="25"/>

            <TextBlock Text="Пароль:" FontSize="16"/>
            <PasswordBox Name="PasswordBox" Margin="0,5" Height="25" FontSize="16"/>
            <Button Content="Авторизуватись"  Margin="0,10,0,0" Height="35" Background="Purple" Foreground="White" FontSize="20"/>
        </StackPanel>
    </Grid>
    
</Window>

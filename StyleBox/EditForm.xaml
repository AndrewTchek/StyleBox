<Window x:Class="StyleBox.EditForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyleBox"
        mc:Ignorable="d"
            Title="Редагування" Height="450" Width="800">
    <Grid >
        <StackPanel Width="500" Height="400" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Зміна даних про одяг" FontSize="30" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>

            <TextBlock Text="Назва:" FontSize="16"/>
            <TextBox Name="NameTextBox" Margin="0,5" Height="25"/>
            <TextBlock Text="Артикул:" FontSize="16"/>
            <TextBox Name="ArticleTextBox" Margin="0,5" Height="25"/>
            <TextBlock Text="Ціна:" FontSize="16"/>
            <TextBox Name="PriceTextBox" Margin="0,5" Height="25"/>
            <TextBlock Text="Тип:" FontSize="16"/>
            <TextBox Name="TypeTextBox" Margin="0,5" Height="25"/>
            <TextBlock Text="Кількість:" FontSize="16"/>
            <TextBox Name="NumberTextBox" Margin="0,5" Height="25"/>
            <Button Content="Додати"  Margin="0,10,0,0" Height="35" Background="Purple" Foreground="White" FontSize="20" Click="Save_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="StyleBox.SearchArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyleBox"
        mc:Ignorable="d"
          Title="Пошук за артиклом" Height="450" Width="800">
    <Grid >
        <StackPanel Width="500" Height="400" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Пошук одягу за артиклом" FontSize="30" FontWeight="Bold" Margin="0,0,0,30" TextAlignment="Center"/>

            <TextBlock Text="Артикул одягу:" FontSize="16"/>
            <TextBox Name="SearchArticleBox" Margin="0,5" Height="30"/>

            <Button Content="Додати"  Margin="0,30,0,0" Height="35" Background="Purple" Foreground="White" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
